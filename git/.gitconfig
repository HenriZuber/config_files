	name = HenriZuber
	email = henri.zuber@gmail.com
[core]
	editor = vim
[alias]
    br = branch
    bra = branch --all
    brd = branch --delete
    ci = commit
    co = checkout
    df = diff --color-words='[^[:space:]]'
    fap = fetch --all --prune
    graph = log --graph --oneline --decorate=short --branches='*'
    sh = show --color-words='[^[]]'
    st = status -sb
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    new = green bold
[color "branch"]
    current = yellow bold
    local = white
    remote = red
[log]
    date = relative
[format]
    pretty = format:%C(yellow)%h %C(cyan)%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
